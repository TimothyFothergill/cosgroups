# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.MainController.index()
GET     /login                      controllers.MainController.login()
GET     /logout                     controllers.MainController.logout()
GET     /register                   controllers.MainController.register()
GET     /about                      controllers.MainController.about()

GET     /dashboard                  controllers.MainController.dashboard()

# These are temporary testing routes
GET     /logged-in                  controllers.MainController.loggedInPage()
GET     /user1                      controllers.MainController.findUserPage()
GET     /updateuser                 controllers.MainController.updateUserPage()
GET     /dropuser                   controllers.MainController.dropUserPage()

POST    /login                      controllers.MainController.loginPost()
POST    /register                   controllers.MainController.registerPost()

GET     /new-cosgroup               controllers.MainController.newCosgroup()
GET     /new-cosplay                controllers.MainController.newCosplay()

GET     /:username                  controllers.MainController.viewProfile(username: String)
GET     /:username/cosgroups        controllers.MainController.viewCosgroups(username: String)
GET     /:username/cosplays         controllers.MainController.viewCosplays(username: String)

POST    /new-cosgroup        controllers.MainController.newCosgroupPost()
POST    /new-cosplay         controllers.MainController.newCosplayPost()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
